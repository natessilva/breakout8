--ball
function spawn_ball(sticky)
	add(
		balls, {
			sx = 24,
			sy = 0,
			w = 4,
			h = 4,
			x = paddle.x + paddle.w / 2 - 2,
			y = paddle.y - 4,
			dx = 1,
			dy = -1,
			sticky = sticky
		}
	)
end

function update_ball(ball)
	if ball.sticky then
		ball.y = paddle.y - ball.h
		ball.x = paddle.x + paddle.w / 2 - ball.w / 2

		if paddle.dx > 0 then
			ball.dx = 1
		elseif paddle.dx < 0 then
			ball.dx = -1
		end
		if btnp(‚ùé) or btnp(üÖæÔ∏è) then
			ball.sticky = false
		end
		return
	end

	update(ball)
	-- wall boundaries
	if ball.x <= 1 or ball.x >= 81 - ball.w then
		ball.dx *= -1
		sfx(0)
	end
	if ball.y <= 0 then
		ball.dy *= -1
		sfx(0)
	end

	-- paddle
	if not collide(
		ball,
		paddle,
		0,
		0
	)
			and collide(
		ball,
		paddle,
		0,
		ball.dy
	) then
		ball.dy *= -1
		sfx(0)
	elseif not collide(
		ball,
		paddle,
		0,
		0
	)
			and collide(
		ball,
		paddle,
		ball.dx,
		0
	) then
		ball.dx *= -1
		sfx(0)
	end

	--bricks
	for b in all(bricks) do
		if collide(ball, b, 0, ball.dy) then
			ball.dy *= -1
			hit_brick(b)
		elseif collide(ball, b, ball.dx, 0) then
			ball.dx *= -1
			hit_brick(b)
		end
	end

	if ball.y > 128 then
		del(balls, ball)
		if #balls == 0 then
			lives -= 1
			if lives <= 0 then
				mode = 'over'
			else
				spawn_ball(true)
			end
		end
	end
end
