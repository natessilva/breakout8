function init_paddle()
	paddle = {
		sx = 8,
		sy = 0,
		w = 16,
		h = 4,
		x = 10,
		y = 100,
		dx = 0,
		dy = 0
	}
end

function update_paddle()
	if btn(‚¨ÖÔ∏è) then
		paddle.dx -= 0.4
	elseif btn(‚û°Ô∏è) then
		paddle.dx += 0.4
	end
	paddle.dx *= .8
	update(paddle)
	paddle.x = mid(1, paddle.x, 81 - paddle.w)
end
