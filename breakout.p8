--core
function update(o)
	o.x += o.dx
	o.y += o.dy
end

function draw(o)
	sspr(
		o.sx,
		o.sy,
		o.w,
		o.h,
		o.x,
		o.y
	)
end

-- checks if a will collide
-- with b after movement
function collide(a, b, dx, dy)
	return a.x + dx < b.x + b.w
			and b.x < a.x + dx + a.w
			and a.y + dy < b.y + b.h
			and b.y < a.y + dy + a.h
end

function center_text(x, t, y, c)
	print(t, x - #t * 2, y, c)
end
