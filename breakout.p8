--modes
function init_game()
	balls = {}
	spawn_ball(true)
	bricks = {}
	init_bricks()
	lives = 3
	mode = 'start'
end

function upd_start()
	update_paddle()

	if btnp() > 0 then
		mode = 'game'
	end
end

function draw_start()
	cls(5)
	center_text(64, "press any key to start", 60, 7)
end

function upd_game()
	update_paddle()
	foreach(balls, update_ball)
end

function draw_game()
	cls(5)
	map()
	draw(paddle)
	foreach(bricks, draw)
	foreach(balls, draw)
	center_text(105, 'lives', 60, 7)

	--	105-(lives*10-2)/2-10
	for i = 1, lives do
		sspr(32, 0, 8, 8, 105 - (lives * 10 - 2) / 2 - 10 + i * 10, 68)
	end
end

function upd_over()
	if btnp(‚ùé) or btnp(üÖæÔ∏è) then
		init_game()
	end
end

function draw_over()
	cls(2)
	center_text(64, "game over; you died", 60, 7)
	center_text(64, "press any key to retry", 67, 7)
end

