--bricks
function init_bricks()
	for i = 0, 9 do
		for j = 0, 9 do
			local t = mget(i, 16 + j)
			if t > 0 then
				add(
					bricks, {
						sx = t % 16 * 8,
						sy = flr(t / 16) * 8,
						w = 8,
						h = 4,
						x = 1 + i * 8,
						y = 18 + j * 4
					}
				)
			end
		end
	end
end

function hit_brick(b)
	del(bricks, b)
	sfx(0)
end
